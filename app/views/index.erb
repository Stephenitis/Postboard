<div class="container">
  <h1>Welcome to the PostBoard!</h1>
  <p>The only place to share your mind freely.</p>
  <div class="dostuff">
    <h2>recent things on people's minds</h2>
    <% Post.all.each do |post| %>
    <div class="post">
      <h3><%= post.title %> </h3>
      <p><%= post.body %></p>
      <footer>tags:  <%= post.tags %></br>
    </div>
    <% end %>
  </div>
</div>

